<% layout("/layouts/boilerplate") %>

<!-- üåü Animation Styles -->
<style>
  /* Container: fade in + slide up */
  .fade-up {
    opacity: 0;
    transform: translateY(20px);
    animation: fadeUp 0.8s ease-out forwards;
  }

  @keyframes fadeUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  /* Image: zoom in */
  .zoom-in {
    opacity: 0;
    transform: scale(0.9);
    animation: zoomIn 0.8s ease-out forwards;
    animation-delay: 0.1s;
  }

  @keyframes zoomIn {
    from {
      opacity: 0;
      transform: scale(0.9);
    }
    to {
      opacity: 1;
      transform: scale(1);
    }
  }

  /* Text and button: staggered fade */
  .fade-stagger {
    opacity: 0;
    animation: fadeStagger 0.8s ease-out forwards;
  }

  .fade-stagger:nth-child(1) {
    animation-delay: 0.4s;
  }
  .fade-stagger:nth-child(2) {
    animation-delay: 0.6s;
  }
  .fade-stagger:nth-child(3) {
    animation-delay: 0.8s;
  }

  @keyframes fadeStagger {
    from {
      opacity: 0;
      transform: translateY(5px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  /* üåê Circle image styling */
  .error-img {
    width: 220px; /* fixed size for perfect circle */
    height: 220px;
    object-fit: cover; /* keeps image proportions */
    border: 4px solid #dc3545; /* optional red border for pop */
  }
</style>

<div class="container text-center mt-5 fade-up">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <!-- üñºÔ∏è Animated Circle Image -->
      <img
        src="https://images.unsplash.com/photo-1555861496-0666c8981751?ixlib=rb-4.1.0&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&q=80&w=2070"
        alt="Error illustration"
        class="img-fluid mb-4 zoom-in rounded-circle error-img"
      />

      <!-- üî¥ Error Status Code -->
      <h1 class="display-4 text-danger mb-3 fade-stagger">
        <%= statusCode %> Error
      </h1>

      <!-- üìù Error Message -->
      <p class="lead mb-4 fade-stagger"><b><%= message %></b></p>

      <!-- üè† Back to Home Button -->
      <a href="/listings" class="btn btn-danger px-4 fade-stagger"
        >Go Back Home</a
      >
      <br /><br />
    </div>
  </div>
</div>
