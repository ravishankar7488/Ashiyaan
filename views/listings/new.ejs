<% layout("/layouts/boilerplate") %>
<body class="bg-light">
  <div class="container mt-5">
    <div class="card shadow-lg p-4 rounded-4">
      <h2 class="text-center text-primary mb-4">üìù Create a New Listing</h2>

      <form
        class="needs-validation"
        novalidate
        method="POST"
        action="/listings"
      >
        <!-- Title -->
        <div class="mb-3">
          <label class="form-label fw-semibold">Title</label>
          <input
            type="text"
            class="form-control"
            placeholder="Enter Title"
            name="title"
            required
          />
          <div class="valid-feedback">‚úÖ Looks Good</div>
          <div class="invalid-feedback">This field is required</div>
        </div>

        <!-- Description -->
        <div class="mb-3">
          <label class="form-label fw-semibold">Description</label>
          <textarea
            class="form-control"
            placeholder="Enter Description"
            name="description"
            rows="3"
            required
          ></textarea>
          <div class="valid-feedback">‚úÖ Looks Good</div>
          <div class="invalid-feedback">This field is required</div>
        </div>

        <!-- Image Link -->
        <div class="mb-3">
          <label class="form-label fw-semibold">Image Link</label>
          <input
            type="url"
            class="form-control"
            placeholder="Enter Image URL"
            name="url"
            required
          />
          <div class="valid-feedback">‚úÖ Looks Good</div>
          <div class="invalid-feedback">This field is required</div>
        </div>

        <!-- Price -->
        <div class="mb-3">
          <label class="form-label fw-semibold">Price</label>
          <input
            type="number"
            class="form-control"
            placeholder="Enter Price"
            name="price"
            required
          />
          <div class="valid-feedback">‚úÖ Looks Good</div>
          <div class="invalid-feedback">This field is required</div>
        </div>

        <!-- Location -->
        <div class="mb-3">
          <label class="form-label fw-semibold">Location</label>
          <input
            type="text"
            class="form-control"
            placeholder="Enter Location"
            name="location"
            required
          />
          <div class="valid-feedback">‚úÖ Looks Good</div>
          <div class="invalid-feedback">This field is required</div>
        </div>

        <!-- Country -->
        <div class="mb-3">
          <label class="form-label fw-semibold">Country</label>
          <input
            type="text"
            class="form-control"
            placeholder="Enter Country"
            name="country"
            required
          />
          <div class="valid-feedback">‚úÖ Looks Good</div>
          <div class="invalid-feedback">This field is required</div>
        </div>

        <!-- Submit Button -->
        <div class="d-grid">
          <button
            type="submit"
            class="btn btn-danger btn-lg rounded-pill shadow-sm"
          >
            üöÄ Post Listing
          </button>
        </div>
      </form>
    </div>
  </div>
</body>
