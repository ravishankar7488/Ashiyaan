<% layout("/layouts/boilerplate") %>

<div class="container mt-5 mb-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <!-- Heading -->
      <h2 class="text-center text-primary fw-bold mb-4"><%= result.title %></h2>

      <!-- Listing Card -->
      <div class="card shadow-lg border-0 rounded-4 overflow-hidden">
        <!-- Image -->
        <img
          src="<%= result.image.url %>"
          class="card-img-top"
          alt="Listing Image"
          style="max-height: 400px; object-fit: cover"
        />

        <!-- Card Body -->
        <div class="card-body p-4">
          <br />
          <p class="card-text text-muted mb-2" style="margin-left: 10px">
            <%= result.description %>
          </p>

          <ul class="list-group list-group-flush mb-4">
            <li class="list-group-item">
              <strong>üí∞ Price:</strong>
              ‚Çπ<%= result.price.toLocaleString("en-IN") %>
            </li>
            <li class="list-group-item">
              <strong>üìç Location:</strong> <%= result.location %>
            </li>
            <li class="list-group-item">
              <strong>üåé Country:</strong> <%= result.country %>
            </li>
          </ul>

          <!-- Action Buttons -->
          <div class="d-flex justify-content-between">
            <a
              href="/listings/edit/<%= result._id %>"
              class="btn btn-warning fw-semibold px-4"
            >
              ‚úèÔ∏è Edit
            </a>

            <form
              method="POST"
              action="/listings/<%= result._id %>?_method=DELETE"
              onsubmit="return confirm('Are you sure you want to delete this listing?');"
            >
              <button
                type="submit"
                class="btn fw-semibold px-4"
                style="background-color: #212529; color: white"
              >
                üóëÔ∏è Delete
              </button>
            </form>
          </div>
        </div>
      </div>

      <!-- Review Section -->
      <div class="card shadow-sm border-0 rounded-4 mt-5">
        <div class="card-body">
          <h5 class="fw-bold mb-3">‚≠ê Leave a Review</h5>
          <form
            method="POST"
            action="/listings/<%= result._id %>/reviews"
            novalidate
            class="needs-validation"
          >
            <div class="mb-3">
              <label for="rating" class="form-label">Rating</label>
              <input
                type="range"
                min="1"
                max="5"
                step="1"
                id="rating"
                name="review[rating]"
                class="form-range"
              />
            </div>
            <div class="mb-3">
              <label for="comment" class="form-label">Comments</label>
              <textarea
                name="review[comment]"
                id="comment"
                rows="3"
                class="form-control"
                placeholder="Share your experience..."
                required
              ></textarea>
              <div class="valid-feedback">
                Thanks for sharing your experience
              </div>
              <div class="invalid-feedback">Comment can't be empty</div>
            </div>
            <button type="submit" class="btn btn-primary w-100">
              Submit Review
            </button>
          </form>
          <hr />
          <div class="container mt-5">
            <h4 class="mb-4 text-primary fw-bold">üí¨ Reviews</h4>
            <div class="row g-4">
              <% result.reviews.forEach((each) => { %>
              <div class="col-md-6">
                <div class="card shadow-sm h-100 border-0 rounded-4">
                  <div
                    class="card-body d-flex flex-column justify-content-between"
                  >
                    <div>
                      <div
                        class="d-flex justify-content-between align-items-center mb-2"
                      >
                        <h6 class="mb-0 fw-bold">John Doe</h6>
                        <span class="text-warning fw-semibold">
                          <%= each.rating %> ‚≠ê
                        </span>
                      </div>
                      <p class="card-text text-muted"><%= each.comment %></p>
                    </div>

                    <!-- Delete Button -->
                    <div class="mt-3 d-flex justify-content-end">
                      <form
                        method="POST"
                        action="/listings/<%= result._id %>/reviews/<%= each._id %>?_method=DELETE"
                      >
                        <button
                          type="submit"
                          class="btn btn-sm btn-outline-danger"
                        >
                          üóëÔ∏è Delete
                        </button>
                      </form>
                    </div>
                  </div>
                </div>
              </div>
              <% }) %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
